/* ==================== BGP TOOLBOX STYLING ==================== */

/* BGP Container */
.bgp-container {
    height: 1fr;
    padding: 1;
}

/* BGP Controls */
.bgp-controls {
    background: #24283b;
    border: heavy #7aa2f7;
    padding: 1;
    margin: 0 0 1 0;
    height: auto;
}

/* BGP Status Bar */
.bgp-status {
    background: #1a1b26;
    border: solid #414868;
    padding: 1;
    margin: 0 0 1 0;
    color: #c0caf5;
    text-align: center;
}

/* BGP Tables */
.bgp-table {
    height: 1fr;
    background: #1a1b26;
    border: heavy #414868;
}

/* Peer Details */
