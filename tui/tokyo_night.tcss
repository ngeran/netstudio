    height: 1fr;
    padding: 1;
}

/* Step Indicator */
.step-indicator {
    background: #24283b;
    border: heavy #7aa2f7;
    padding: 1;
    margin: 0 0 1 0;
    color: #c0caf5;
}

/* Content Area */
.content-area {
    height: 1fr;
    background: #1a1b26;
    border: heavy #414868;
    padding: 1;
    margin: 0 0 1 0;
}

.step-title {
    color: #7dcfff;
    text-style: bold;
    padding: 0 0 1 0;
}

/* Wizard Navigation */
.wizard-navigation {
    padding: 1 0;
    margin: 0 0 1 0;
    border-top: solid #414868;
}

.wizard-navigation Button {
    margin: 0 1 0 0;
}

/* Wizard Status */
.wizard-status {
    dock: bottom;
    height: auto;
    background: #24283b;
    padding: 1;
    color: #c0caf5;
